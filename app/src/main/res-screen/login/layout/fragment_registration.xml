<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.RegistrationFragment">

    <ImageView
        android:id="@+id/logo_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_welcome_smiley_color"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/hi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:elevation="3dp"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/create_new_account"
        android:textColor="@color/light_purple"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/to_save_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hi_text"
        android:layout_centerHorizontal="true"
        android:elevation="3dp"
        android:fontFamily="@font/raleway_regular"
        android:text="@string/login_screen_to_save"
        android:textColor="@color/light_purple"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/to_save_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp">
        <LinearLayout
            android:id="@+id/name_field"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/purple_stroke_for_fields"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/name_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/raleway_regular"
                android:hint="Name"
                android:inputType="textEmailAddress"
                android:textColor="@color/light_purple"
                android:textColorHint="@color/light_purple"
                android:textSize="16dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/login_field"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:layout_below="@id/name_field"
            android:background="@drawable/purple_stroke_for_fields"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <EditText
                android:id="@+id/email_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/raleway_regular"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColor="@color/light_purple"
                android:textColorHint="@color/light_purple"
                android:textSize="16dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pass_field"
            android:layout_width="280dp"
            android:layout_height="40dp"
            android:layout_below="@id/login_field"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/purple_stroke_for_fields"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/pass_input"
                android:layout_width="255dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/raleway_regular"
                android:hint="Password"
                android:paddingLeft="10dp"
                android:textColor="@color/light_purple"
                android:paddingRight="2dp"
                android:textColorHint="@color/light_purple"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_welcome_lock" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/register_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_below="@id/pass_field"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="6dp"
            android:background="@drawable/purple_gradient_for_buttons"
            android:fontFamily="@font/raleway_regular"
            android:text="@string/create_account"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

</RelativeLayout>