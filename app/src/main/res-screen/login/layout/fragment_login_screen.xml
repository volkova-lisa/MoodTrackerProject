<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.login.LoginFragment">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_left"
        app:layout_constraintGuide_begin="20dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_right"
        app:layout_constraintGuide_end="20dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_left_login"
        app:layout_constraintGuide_begin="60dp"
        android:orientation="vertical"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline_right_login"
        app:layout_constraintGuide_end="60dp"
        android:orientation="vertical"/>

    <ImageView
        android:id="@+id/logo_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_welcome_smiley_color"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"/>

    <TextView
        android:id="@+id/hi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@id/logo_welcome"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/login_screen_login_or_signup"
        android:textColor="@color/light_purple"
        android:textSize="21sp" />

    <TextView
        android:id="@+id/to_save_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintTop_toBottomOf="@id/hi_text"
        android:fontFamily="@font/raleway_regular"
        android:text="@string/login_screen_to_save"
        android:textColor="@color/light_purple"
        android:textSize="18sp" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@id/to_save_text"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        android:hint="@string/email"
        android:textColorHint="@color/light_purple"
        app:boxStrokeColor="@color/light_purple"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pass"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        android:hint="@string/password"
        app:endIconMode="custom"
        android:textColorHint="@color/light_purple"
        app:boxStrokeColor="@color/light_purple"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:endIconDrawable="@drawable/ic_welcome_lock"
        app:errorIconTint="@color/light_purple">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pass_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

    </com.google.android.material.textfield.TextInputLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_button"
            android:layout_width="300dp"
            android:layout_height="60dp"
            app:layout_constraintEnd_toEndOf="@id/guideline_right"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/pass"
            android:layout_marginTop="6dp"
            android:background="@drawable/purple_gradient_for_buttons"
            android:fontFamily="@font/raleway_regular"
            android:text="@string/login_screen_login"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="21sp" />

    <TextView
        android:id="@+id/create_new_account_text_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintEnd_toStartOf="@id/guideline_right"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        android:fontFamily="@font/raleway_regular"
        android:text="@string/do_you_have_an_account"
        android:textColor="@color/light_purple"
        android:textSize="14sp" />

        <TextView
            android:id="@+id/forgot_pass_text_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway_regular"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintEnd_toStartOf="@id/guideline_right"
            app:layout_constraintTop_toBottomOf="@id/create_new_account_text_button"
            android:text="@string/forgot_password"
            android:textColor="@color/light_purple"
            android:textSize="14sp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:adjustViewBounds="true"
        android:focusable="false"
        android:paddingTop="300dp"
        android:scaleType="centerCrop"
        android:src="@drawable/login_boy"
        app:layout_constraintEnd_toEndOf="@id/guideline_right"
        app:layout_constraintStart_toStartOf="@id/guideline_left"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>


