<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="110dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="11dp"
    android:background="@drawable/purple_home_note"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="9dp">

    <TextView
        android:id="@+id/title_of_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/raleway_regular"
        android:gravity="center"
        android:text="Some text for"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text_of_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/raleway_regular"
        android:text="Have to coete several tasks at work  and r ..."
        android:textColor="@color/light_purple_text"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/time_of_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/raleway_regular"
        android:text="10:20"
        android:textColor="@color/white"
        android:textSize="10sp" />

</LinearLayout>