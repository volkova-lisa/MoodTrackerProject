<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="12dp">

    <TextView
        android:id="@+id/disgust_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/disgust"
        android:textColor="@color/light_purple"
        android:textSize="12sp" />

    <ProgressBar
        android:id="@+id/disgust_bar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_weight="1"
        android:progress="60"
        android:progressBackgroundTint="@color/light_purple"
        android:progressTint="@color/light_purple" />

    <TextView
        android:id="@+id/pleasure_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/pleasure"
        android:textColor="@color/light_purple"
        android:textSize="12sp" />

</LinearLayout>