<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.HomeFragment">

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/guideline_left"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintGuide_percent="0.05" />

   <androidx.constraintlayout.widget.Guideline
       android:id="@+id/guideline_right"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintGuide_percent="0.95" />

   <com.google.android.material.appbar.AppBarLayout
       android:id="@+id/toolbar_layout"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:elevation="5dp"
       app:layout_constraintLeft_toLeftOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toTopOf="parent">

      <androidx.appcompat.widget.Toolbar
          android:id="@+id/toolbar"
          app:menu="@menu/home_menu"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="?attr/colorPrimary"
          android:backgroundTint="@color/white"
          android:minHeight="?attr/actionBarSize"
            app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toTopOf="parent"
          app:title="@string/home"
          app:titleTextColor="@color/light_purple" />
   </com.google.android.material.appbar.AppBarLayout>

   <ImageView
       android:id="@+id/toolbar_calendar"
       android:layout_width="24dp"
       android:layout_height="24dp"
       android:layout_marginEnd="25dp"
       android:elevation="5dp"
       app:tint="@color/light_purple"
       android:src="@drawable/ic_baseline_calendar"
       app:layout_constraintBottom_toBottomOf="@id/toolbar_layout"
       app:layout_constraintEnd_toStartOf="@id/guideline_right"
       app:layout_constraintTop_toTopOf="@id/toolbar_layout" />

   <androidx.cardview.widget.CardView
       android:layout_width="40dp"
       android:layout_height="40dp"
       android:id="@+id/cardview_photo"
       app:cardCornerRadius="40dp"
       android:layout_centerHorizontal="true"
       android:innerRadius="0dp"
       android:shape="ring"
       android:thicknessRatio="1.9"
       android:layout_marginTop="16dp"
       app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
       app:layout_constraintStart_toEndOf="@id/guideline_left">
      <ImageView
          android:layout_height="40dp"
          android:layout_width="match_parent"
          android:id="@+id/photo"
          android:scaleType="centerCrop"
          android:src="@color/light_purple"
          android:layout_alignParentTop="true"
          android:layout_centerHorizontal="true">
      </ImageView>
   </androidx.cardview.widget.CardView>

   <TextView
       android:id="@+id/name"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:text="@string/lisa_volkova"
       android:textColor="@color/light_purple"
       android:fontFamily="@font/raleway_bold"
       android:layout_marginStart="16dp"
       android:textSize="18sp"
       app:layout_constraintTop_toTopOf="@id/cardview_photo"
       app:layout_constraintStart_toEndOf="@id/cardview_photo"/>
   <TextView
       android:id="@+id/date"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/monday_5th_jan"
       android:textColor="@color/light_purple_text"
       android:fontFamily="@font/raleway_regular"
       android:textSize="14sp"
       android:layout_marginTop="1.5dp"
       app:layout_constraintTop_toBottomOf="@id/name"
       app:layout_constraintStart_toStartOf="@id/name"/>
   <TextView
       android:id="@+id/mood_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/today_s_moods"
       android:textColor="@color/light_purple"
       android:fontFamily="@font/raleway_bold"
       android:layout_marginTop="20dp"
       android:textSize="14sp"
       app:layout_constraintTop_toBottomOf="@id/cardview_photo"
       app:layout_constraintStart_toEndOf="@id/guideline_left"/>

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/emoji_list"
       android:layout_width="wrap_content"
       android:layout_marginTop="9dp"
       android:paddingStart="20dp"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/mood_title"
       tools:listitem="@layout/home_mood_item"
       tools:visibility="visible"
       tools:ignore="RtlSymmetry" />

   <TextView
       android:id="@+id/notes_title"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="@string/notes"
       android:textColor="@color/light_purple"
       android:fontFamily="@font/raleway_bold"
       android:layout_marginTop="20dp"
       android:textSize="14sp"
       app:layout_constraintTop_toBottomOf="@id/emoji_list"
       app:layout_constraintStart_toEndOf="@id/guideline_left"/>

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/notes_list"
       android:layout_width="wrap_content"
       android:layout_marginTop="9dp"
       android:paddingStart="20dp"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toBottomOf="@id/notes_title"
       tools:listitem="@layout/home_note_item"
       tools:visibility="visible"
       tools:ignore="RtlSymmetry" />

</androidx.constraintlayout.widget.ConstraintLayout>