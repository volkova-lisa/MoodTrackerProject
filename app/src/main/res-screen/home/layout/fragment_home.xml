<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.05" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.95" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.49" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.51" />

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:backgroundTint="@color/white"
                android:minHeight="?attr/actionBarSize"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:menu="@menu/home_menu"
                app:title="@string/home"
                app:titleTextColor="@color/light_purple" />
        </com.google.android.material.appbar.AppBarLayout>

        <ImageView
            android:id="@+id/toolbar_calendar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="25dp"
            android:elevation="5dp"
            android:src="@drawable/ic_baseline_calendar"
            app:layout_constraintBottom_toBottomOf="@id/toolbar_layout"
            app:layout_constraintEnd_toStartOf="@id/guideline_right"
            app:layout_constraintTop_toTopOf="@id/toolbar_layout"
            app:tint="@color/light_purple" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_photo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="40dp"
            app:layout_constraintStart_toEndOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/toolbar_layout">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@color/light_purple"></ImageView>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/raleway_bold"
            android:text="@string/lisa_volkova"
            android:textColor="@color/light_purple"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/cardview_photo"
            app:layout_constraintTop_toTopOf="@id/cardview_photo" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.5dp"
            android:fontFamily="@font/raleway_regular"
            android:text="@string/monday_5th_jan"
            android:textColor="@color/light_purple_text"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/name"
            app:layout_constraintTop_toBottomOf="@id/name" />

        <TextView
            android:id="@+id/mood_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway_bold"
            android:text="@string/today_s_moods"
            android:textColor="@color/light_purple"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/cardview_photo" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/emoji_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-8dp"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/mood_title"
            tools:ignore="RtlSymmetry"
            tools:listitem="@layout/home_mood_item"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/notes_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway_bold"
            android:text="@string/notes"
            android:textColor="@color/light_purple"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/emoji_list" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/notes_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/notes_title"
            tools:ignore="RtlSymmetry"
            tools:listitem="@layout/home_note_item"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/mental_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway_bold"
            android:text="@string/mental_health"
            android:textColor="@color/light_purple"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/notes_list" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mental_bg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="-8dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="-8dp"
            android:background="@drawable/home_mood_item_bg"
            android:paddingBottom="20dp"
            android:shape="rectangle"
            app:layout_constraintEnd_toEndOf="@id/guideline_right"
            app:layout_constraintHorizontal_bias="0.562"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/mental_title">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/line_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/line_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.8" />

            <TextView
                android:id="@+id/disgust_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/raleway_bold"
                android:text="@string/disgust"
                android:textColor="@color/light_purple"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/disgust_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:progress="60"
                android:progressBackgroundTint="@color/light_purple"
                android:progressTint="@color/light_purple"
                app:layout_constraintBottom_toBottomOf="@id/disgust_title"
                app:layout_constraintEnd_toEndOf="@id/line_right"
                app:layout_constraintStart_toStartOf="@id/line_left"
                app:layout_constraintTop_toTopOf="@id/disgust_title" />

            <TextView
                android:id="@+id/pleasure_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/raleway_bold"
                android:text="@string/pleasure"
                android:textColor="@color/light_purple"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@id/disgust_bar"
                app:layout_constraintTop_toTopOf="@id/disgust_title" />

            <TextView
                android:id="@+id/sadness_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/raleway_bold"
                android:text="@string/sadness"
                android:textColor="@color/light_purple"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/disgust_title" />

            <ProgressBar
                android:id="@+id/sadness_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:progress="30"
                android:progressBackgroundTint="@color/light_purple"
                android:progressTint="@color/light_purple"
                app:layout_constraintBottom_toBottomOf="@id/sadness_title"
                app:layout_constraintEnd_toEndOf="@id/line_right"
                app:layout_constraintStart_toStartOf="@id/line_left"
                app:layout_constraintTop_toTopOf="@id/sadness_title" />

            <TextView
                android:id="@+id/happiness_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/raleway_bold"
                android:text="@string/happiness"
                android:textColor="@color/light_purple"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@id/disgust_bar"
                app:layout_constraintTop_toTopOf="@id/sadness_title" />

            <TextView
                android:id="@+id/anger_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/raleway_bold"
                android:text="@string/anger"
                android:textColor="@color/light_purple"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/sadness_title" />

            <ProgressBar
                android:id="@+id/anger_bar"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:progress="90"
                android:progressBackgroundTint="@color/light_purple"
                android:progressTint="@color/light_purple"
                app:layout_constraintBottom_toBottomOf="@id/anger_title"
                app:layout_constraintEnd_toEndOf="@id/line_right"
                app:layout_constraintStart_toStartOf="@id/line_left"
                app:layout_constraintTop_toTopOf="@id/anger_title" />

            <TextView
                android:id="@+id/joy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="@font/raleway_bold"
                android:text="@string/joy"
                android:textColor="@color/light_purple"
                android:textSize="11sp"
                app:layout_constraintStart_toEndOf="@id/disgust_bar"
                app:layout_constraintTop_toTopOf="@id/anger_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/body_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/raleway_bold"
            android:text="@string/body_health"
            android:textColor="@color/light_purple"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/mental_bg" />


        <include
            android:id="@+id/kcal_item"
            layout="@layout/home_kcal_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/guideline_right"
            app:layout_constraintStart_toStartOf="@id/guideline_two"
            app:layout_constraintTop_toBottomOf="@id/steps_item" />

        <include
            android:id="@+id/steps_item"
            layout="@layout/home_steps_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/guideline_right"
            app:layout_constraintStart_toStartOf="@id/guideline_two"
            app:layout_constraintTop_toBottomOf="@id/body_title"/>

        <include
            android:id="@+id/sleep_item"
            layout="@layout/home_sleep_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/guideline_one"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/water_item" />

        <include
            android:id="@+id/water_item"
            layout="@layout/home_water_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/guideline_one"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/guideline_left"
            app:layout_constraintTop_toBottomOf="@id/body_title" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>