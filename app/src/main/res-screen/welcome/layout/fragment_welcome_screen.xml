<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.WelcomeFragment">

    <ImageView
        android:id="@+id/logo_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_welcome_smiley_color"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/hi_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo_welcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:elevation="3dp"
        android:fontFamily="@font/raleway_bold"
        android:text="@string/welcome_screen_hi"
        android:textColor="@color/light_purple"
        android:textSize="21sp" />
    <TextView
        android:id="@+id/your_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/hi_text"
        android:layout_centerHorizontal="true"
        android:elevation="3dp"
        android:fontFamily="@font/raleway_regular"
        android:text="@string/welcome_screen_your_new"
        android:textColor="@color/light_purple"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/your_text"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/welcome_boy" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/welcome_button"
        android:layout_width="205dp"
        android:layout_height="55dp"
        android:textAllCaps="false"
        android:background="@drawable/purple_gradient_for_buttons"
        android:layout_centerHorizontal="true"
        android:text="@string/welcome_screen_hi_moody"
        android:fontFamily="@font/raleway_regular"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:textColor="@color/white"/>



</RelativeLayout>